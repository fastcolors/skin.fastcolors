            <aligny>top</aligny>
            <font>shelf</font>
            <textcolor>76ffffff</textcolor>
            <label>$INFO[Player.Title][CR]$INFO[VideoPlayer.Artist][CR]$INFO[VideoPlayer.Year]</label>
        </control>
    </controls>
