    <defaultcontrol>-</defaultcontrol>
    <visible>Player.HasVideo + VideoPlayer.IsFullscreen</visible>
    <controls>
        <control type="image">
            <left>60</left>
            <top>30</top>
            <width>375</width>
            <height>150</height>
            <texture>logo_fast_video.png</texture>
            <colordiffuse>76ffffff</colordiffuse>
            <aspectratio>keep</aspectratio>
        </control>
        <control type="image">
            <top>20</top>
            <right>60</right>
            <width>375</width>
            <height>150</height>
            <aspectratio>keep</aspectratio>
            <colordiffuse>76ffffff</colordiffuse>
            <texture background="true">$INFO[Player.Art(clearlogo)]</texture>
        </control>
        <control type="label">
            <top>30</top>
            <right>60</right>
            <width>375</width>
            <height>200</height>
