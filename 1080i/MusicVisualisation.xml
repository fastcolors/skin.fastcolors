<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol></defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <include>BlackBackground</include>
        <control type="image">
            <include>Dimensions_Fullscreen</include>
            <colordiffuse>55404040</colordiffuse>
            <texture>$INFO[Player.Art(fanart)]</texture>
        </control>
        <control type="grouplist">
            <orientation>horizontal</orientation>
            <centerleft>960</centerleft>
            <top>830</top>
            <width>1920</width>
            <align>center</align>
            <itemgap>20</itemgap>
            <control type="image">
                <width>68</width>
                <height>140</height>
                <texture>logo_fast.png</texture>
                <colordiffuse>darkred</colordiffuse>
                <aspectratio>keep</aspectratio>
            </control>
            <control type="label">
                <width>1000</width>
                <height>140</height>
                <font>size212_fast</font>
                <alingy>bottom</alingy>
                <textcolor>darkred</textcolor>
                <label>FASTCOLORS STUDIO</label>
            </control>
            <control type="image">
                <width>68</width>
                <height>140</height>
                <texture>logo_fast.png</texture>
                <colordiffuse>darkred</colordiffuse>
                <aspectratio>keep</aspectratio>
            </control>
        </control>
        <control type="group">
            <visible>!Window.IsVisible(musicosd)</visible>
            <centerleft>960</centerleft>
            <top>170</top>
            <width>540</width>
            <animation condition="true" effect="zoom" center="auto" end="105" reversible="false">Conditional</animation>
            <control type="image">
                <width>540</width>
                <height>540</height>
                <texture>$INFO[MusicPlayer.Cover]</texture>
            </control>
            <control type="label">
                <top>550</top>
                <height>40</height>
                <width>540</width>
                <align>center</align>
                <font>size30B</font>
                <label>$INFO[MusicPlayer.Title]</label>
            </control>
            <control type="textbox">
                <top>590</top>
                <height>80</height>
                <width>540</width>
                <align>center</align>
                <font>font12</font>
                <label>[B]$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, -- ][/B]</label>
            </control>
        </control>
        <control type="progress" description="Progress Bar">
            <top>990</top>
            <left>110</left>
            <width>1700</width>
            <height>10</height>
            <reveal>true</reveal>
            <texturebg border="4">Seekbar/ProgressBG.png</texturebg>
            <lefttexture border="4">Seekbar/ProgressL.png</lefttexture>
            <midtexture>Seekbar/ProgressM.png</midtexture>
            <righttexture border="4">Seekbar/ProgressR.png</righttexture>
            <info>Player.Progress</info>
            <visible>true</visible>
        </control>
    </controls>
</window>
