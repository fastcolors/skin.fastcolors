<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol></defaultcontrol>
    <onload>RunScript(script.artistslideshow)</onload>
    <allowoverlay>no</allowoverlay>
    <controls>
        <include>BlackBackground</include>
        <control type="multiimage">
            <include>Dimensions_Fullscreen</include>
            <imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
            <timeperimage>10000</timeperimage>
            <fadetime>1200</fadetime>
            <colordiffuse>66404040</colordiffuse>
            <randomize>true</randomize>
        </control>
        <control type="image">
            <left>60</left>
            <top>60</top>
            <width>200</width>
            <height>200</height>
            <bordertexture border="5">images/White.png</bordertexture>
            <bordersize>5</bordersize>
            <info>MusicPlayer.Cover</info>
        </control>
        <control type="label">
            <width>1920</width>
            <height>auto</height>
            <font>huge</font>
            <align>center</align>
            <textcolor>88eeffff</textcolor>
            <info>System.Time(hh:mm)</info>
        </control>
        <control type="grouplist">
            <orientation>horizontal</orientation>
            <centerleft>960</centerleft>
            <top>850</top>
            <width>1920</width>
            <align>center</align>
            <itemgap>20</itemgap>
            <control type="image">
                <width>68</width>
                <height>140</height>
                <texture>logo_fast.png</texture>
                <colordiffuse>99ffffff</colordiffuse>
                <aspectratio>keep</aspectratio>
            </control>
            <control type="label">
                <width>1000</width>
                <height>140</height>
                <font>size212_fast</font>
                <alingy>bottom</alingy>
                <textcolor>99ffffff</textcolor>
                <label>FASTCOLORS STUDIO</label>
            </control>
            <control type="image">
                <width>68</width>
                <height>140</height>
                <texture>logo_fast.png</texture>
                <colordiffuse>99ffffff</colordiffuse>
                <aspectratio>keep</aspectratio>
            </control>
        </control>
        <control type="progress" description="Progress Bar">
            <top>1010</top>
            <left>110</left>
            <width>1700</width>
            <height>10</height>
            <reveal>true</reveal>
            <texturebg border="4">Seekbar/ProgressBG.png</texturebg>
            <lefttexture border="4">Seekbar/ProgressL.png</lefttexture>
            <midtexture>Seekbar/ProgressM.png</midtexture>
            <righttexture border="4">Seekbar/ProgressR.png</righttexture>
            <info>Player.Progress</info>
            <visible>true</visible>
        </control>
        <control type="label">
            <centerleft>960</centerleft>
            <width>1920</width>
            <width>1920</width>
            <height>90</height>
            <font>size60B</font>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>99ffffff</textcolor>
            <label>$INFO[Player.Title]$INFO[MusicPlayer.Artist, â€¢ ]</label>
        </control>
    </controls>
</window>